<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NavigationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="285dp"
            android:layout_height="150dp"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            android:orientation="vertical"
            android:background="@color/cardview_dark_background">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:padding="30dp">

                <TextView
                    android:id="@+id/profileIcon"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@drawable/background"
                    android:text="@string/s"
                    android:gravity="center"
                    android:textSize="35sp"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:layout_toEndOf="@id/profileIcon"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="10dp"
                    tools:ignore="RelativeOverlap" />

                <TextView
                    android:id="@+id/userTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_title"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:layout_below="@id/userName"
                    android:layout_toEndOf="@id/profileIcon"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"/>

                <ImageButton
                    android:id="@+id/editIcon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/edit"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/edit" />

            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="285dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <TextView
                android:layout_width="285dp"
                android:layout_height="match_parent"
                android:text="@string/project_list"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="285dp"
            android:background="@color/white"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/addlist"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:text="@string/add_list"
                android:textSize="20sp"
                android:backgroundTint="@color/black"
                android:layout_marginTop="5dp"
                android:src="@drawable/add_box"/>

            <LinearLayout
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/white">

                <EditText
                    android:id="@+id/projectList"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/enter_the_project"
                    android:autofillHints=""
                    android:inputType="text"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/addProject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add"
                    android:backgroundTint="@color/black"
                    android:visibility="gone"/>

            </LinearLayout>
            <ListView
                android:id="@+id/nameListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="1dp"
                android:listSelector="@color/cardview_shadow_start_color"/>

        </LinearLayout>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>
